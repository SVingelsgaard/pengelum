WindowManager:
    StartScreen:
    MainScreen:


#where the grapics is created
<StartScreen>:
    Label:
        pos: 0, -100
        text: "press to start"

    Button:
        size: root.size
        opacity: 0
        on_release:
            root.manager.transition.duration = '0'#fyfy
            app.root.current = "mainScreen"
            app.runApp()
    
        
<MainScreen>:
    name: "mainScreen"

    canvas.before:
        Color:
            rgba: 1, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.size
        Pengelum:
            id: pengelum
            #size: self.size
            source: "frontend/pics/pengelum.png"
            pos: 100, 0
            #size_hint: None, None

        Widget:
            canvas.before:
                PushMatrix:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: 90,90
                    size: 10,10
            canvas.after:
                PopMatrix:
        Image:
            source: "frontend/pics/Leg.png"
            pos: 0,0
        